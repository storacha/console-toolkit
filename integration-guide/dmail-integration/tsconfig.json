{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@storacha/console-toolkit-react": ["../../packages/react/src/index.ts"],
      "@storacha/console-toolkit-react/*": ["../../packages/react/src/*"],
      "@storacha/console-toolkit-react-styled": ["../../packages/react-styled/src/index.ts"],
      "@storacha/console-toolkit-react-styled/*": ["../../packages/react-styled/src/*"]
    }
  },
  "include": ["src"]
}
